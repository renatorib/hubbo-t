{
  "name": "hubbo",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "simple-git-hooks",
    "codegen": "pnpm -r codegen",
    "type-check": "pnpm -r type-check",
    "test": "pnpm -r test",
    "-- package-only scripts --": "",
    "pkgs:test": "pnpm --filter \"{packages/**}\" -r test",
    "prepkgs:build": "pnpm codegen && pnpm type-check && pnpm pkgs:test",
    "pkgs:build": "pnpm --filter \"{packages/**}\" -r build",
    "prepkgs:release": "pnpm pkgs:build",
    "pkgs:release": "pnpm --filter \"{packages/**}\" --workspace-concurrency=1 -r release"
  },
  "simple-git-hooks": {
    "pre-commit": "./node_modules/.bin/nano-staged",
    "pre-push": "pnpm type-check && pnpm test"
  },
  "nano-staged": {
    "*.{ts,tsx,md}": "prettier --write --ignore-unknown"
  },
  "devDependencies": {
    "@types/micromatch": "^4.0.9",
    "@types/minimist": "^1.2.5",
    "@types/node": "^20.14.12",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@types/semver": "^7.5.8",
    "chalk-template": "^1.1.0",
    "fast-glob": "^3.3.2",
    "micromatch": "^4.0.7",
    "minimist": "^1.2.8",
    "nano-staged": "^0.8.0",
    "prettier": "^3.3.3",
    "semantic-release": "^24.1.0",
    "semantic-release-monorepo": "^8.0.2",
    "semver": "^7.6.3",
    "simple-git-hooks": "^2.11.1",
    "ts-stub": "0.1.1-beta.5",
    "tsup": "^8.2.3",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4",
    "unbuild": "^2.0.0",
    "yaml": "^2.4.5",
    "zx": "^8.1.4"
  },
  "packageManager": "pnpm@9.9.0+sha256.7a4261e50d9a44d9240baf6c9d6e10089dcf0a79d0007f2a26985a6927324177"
}
