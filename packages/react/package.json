{
  "name": "@hubbo/react",
  "version": "1.3.0",
  "description": "Hubbo React Utils",
  "author": "<hi@rena.to>",
  "license": "MIT",
  "files": [
    "dist",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/renatorib/hubbo-t"
  },
  "type": "module",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "development": "./src/index.ts",
      "default": {
        "import": "./dist/index.js",
        "require": "./dist/index.cjs",
        "types": "./dist/index.d.ts"
      }
    },
    "./server": {
      "development": "./src/server.ts",
      "default": {
        "import": "./dist/server.js",
        "require": "./dist/server.cjs",
        "types": "./dist/server.d.ts"
      }
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "tsc --noEmit",
    "build": "rm -rf ./dist && tsup"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@shikijs/markdown-it": "^1.16.2",
    "htmr": "^1.0.2",
    "markdown-it": "^14.1.0",
    "server-only": "^0.0.1",
    "shiki": "^1.16.2"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.2"
  }
}
